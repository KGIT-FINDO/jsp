<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>MFrontController</servlet-name><!--서블릿 클래스명 -->
        <servlet-class>member.MFrontController</servlet-class><!-- 풀패키지 경로-->
    </servlet>
    <servlet-mapping>
        <servlet-name>MFrontController</servlet-name>
        <url-pattern>*.do</url-pattern><!-- 브라우저 주소창에서 *.do가 실행되면 MFrontController 서블릿 컨트롤러가 실행됨.-->
    </servlet-mapping>
</web-app>